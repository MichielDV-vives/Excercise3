@model Excercise3.Models.ShoppingCart

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout</title>
    <style>
        .container {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f4f8fc;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        .btn {
            margin-left: 10px;
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
<h1>Checkout</h1>
<div class="container">
    <h2>Shopping Cart</h2>
    <ul>
        @foreach (var product in Model.Products)
        {
        <li>@product.Name - €@product.Price</li>
        }
    </ul>
    <p><strong>Total Price:</strong> €@Model.TotalPrice</p>
    <h3>Select Payment Method</h3>
    <button class="btn">Pay with Credit Card</button>
    <button class="btn">Pay with PayPal</button>
    <button class="btn">Pay</button>
</div>
</body>
</html>