@model List<Excercise3.Models.Product>

@{
var cart = ViewBag.Cart as Excercise3.Models.ShoppingCart;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Shop</title>
    <style>
        .container {
            display: flex;
            gap: 20px;
        }

        .products, .cart {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .products {
            background-color: #f9f9f9;
        }

        .cart {
            background-color: #f4f8fc;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        form {
            display: inline;
        }

        .btn {
            margin-left: 10px;
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
<h1>Welcome to the Product Shop</h1>
<div class="container">
    <!-- ProductList -->
    <div class="products">
        <h2>Available Products</h2>
        <ul>
            @foreach (var product in Model)
            {
            <li>
                <strong>@product.Name</strong> - €@product.Price
                <br />
                @if (!string.IsNullOrEmpty(product.Description))
                {
                <small>@product.Description</small><br />
                }
                <form method="post" asp-action="AddToCart">
                    <input type="hidden" name="id" value="@product.Id" />
                    <button type="submit" class="btn">Add to Cart</button>
                </form>
            </li>
            }
        </ul>
    </div>

    <!-- ShoppingCartList -->
    <div class="cart">
        <h2>Your Shopping Cart</h2>
        <ul>
            @if (cart != null && cart.Products.Any())
            {
            foreach (var product in cart.Products)
            {
            <li>
                <strong>@product.Name</strong> - €@product.Price
                <form method="post" asp-action="RemoveFromCart">
                    <input type="hidden" name="id" value="@product.Id" />
                    <button type="submit" class="btn">Remove</button>
                </form>
            </li>
            }
            <p><strong>Total Price:</strong> €@cart.TotalPrice</p>
            <a asp-action="Checkout" class="btn">Checkout</a>
            }
            else
            {
            <p>Your cart is empty.</p>
            }
        </ul>
    </div>
</div>
</body>
</html>
